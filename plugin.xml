<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="cordova-ios-export-compliance" version="1.0.0">
    <name>iOS Export Compliance</name>
    <description>This plugin sets ITSAppUsesNonExemptEncryption in *-Info.plist file</description>
    <license>ISC</license>
    <engine name="ios" spec="^4.0.0" />

    <platform name="ios">
        <config-file target="*-Info.plist" parent="UIBackgroundModes">
            <array>
                <string>remote-notification</string>
            </array>
        </config-file>

        <config-file target="*-Info.plist" parent="ITSAppUsesNonExemptEncryption">
            <false/>
        </config-file>
    </platform>
</plugin>